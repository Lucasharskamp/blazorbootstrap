<Progress Class="mb-3">
    <ProgressBar @ref="progressBar" />
</Progress>

<Button Type="ButtonType.Button" Color="BsColor.Primary" Size="ButtonSize.Small" @onclick="IncreaseProgressBar">Increase by 10%</Button>
<Button Type="ButtonType.Button" Color="BsColor.Primary" Size="ButtonSize.Small" @onclick="DecreaseProgressBar">Decrease by 10%</Button>
<Button Type="ButtonType.Button" Color="BsColor.Primary" Size="ButtonSize.Small" @onclick="ResetProgressBar">Reset</Button>

@code {
    ProgressBar progressBar = default!;

    private void IncreaseProgressBar()
    {
        progressBar.IncreaseWidth(10);
        progressBar.Label = $"{progressBar.Width}%";
    }

    private void DecreaseProgressBar()
    {
        progressBar.DecreaseWidth(10);
        progressBar.Label = $"{progressBar.Width}%";
    }

    private void ResetProgressBar()
    {
        progressBar.Width = 0;
        progressBar.Label = $"{progressBar.Width}%";
    }
}
